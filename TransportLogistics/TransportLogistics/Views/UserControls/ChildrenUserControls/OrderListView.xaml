<UserControl x:Class="TransportLogistics.Views.UserControls.ChildrenUserControls.OrderListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TransportLogistics.Views.UserControls.ChildrenUserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
              DataContext="{StaticResource vmlocator}">
    <Grid  DataContext="{Binding MainViewModel}">
        <Grid.RowDefinitions>
            <RowDefinition Height="6*"></RowDefinition>
            <RowDefinition Height="3*"></RowDefinition>

        </Grid.RowDefinitions>
        <ScrollViewer Grid.Row="0">
            <ListView ItemsSource="{Binding Orders}"
                  SelectedItem="{Binding SelectedOrder}">
                <ListView.View>
                    <GridView Selector.IsSelected="False">
                        <GridViewColumn DisplayMemberBinding="{Binding Date}"
                                        Width="100">Дата</GridViewColumn>
                        <GridViewColumn DisplayMemberBinding="{Binding OrderStatus}"
                                         Width="120">Статус</GridViewColumn>
                        <GridViewColumn DisplayMemberBinding="{Binding FromWhere}"
                                         Width="150">Откуда</GridViewColumn>
                        <GridViewColumn DisplayMemberBinding="{Binding Where}"
                                         Width="150">Куда</GridViewColumn>
                        <GridViewColumn DisplayMemberBinding="{Binding Note}"
                                         Width="120">Примечание</GridViewColumn>
                        <GridViewColumn DisplayMemberBinding="{Binding UserLastName}"
                                         Width="120">Ответственный</GridViewColumn>
                        <GridViewColumn Width="30">
                           
                        </GridViewColumn>

                    </GridView>
                </ListView.View>
            </ListView>
        </ScrollViewer>
        <StackPanel Grid.Row="1" Margin="5" Background="AliceBlue">
            <StackPanel Orientation="Horizontal">
                <StackPanel Orientation="Horizontal" Margin="5">
                    <Label Width="80">Дата:</Label>
                    <DatePicker SelectedDate="{Binding SelectedOrder.Date}"
                                SelectedDateFormat="Short"></DatePicker>
                   
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="5">
                    <Label Width="100">Статус заказа:</Label>
                    <ComboBox Width="180"
                          ItemsSource="{Binding OrderStatuses}"
                          SelectedItem="{Binding SelectedOrderStatus}"
                          Text="{Binding SelectedOrder.OrderStatus}"
                         ></ComboBox>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="5">
                    <Label Width="100">Ответственный:</Label>
                    <ComboBox Width="180"
                          ItemsSource="{Binding Users}"
                          SelectedItem="{Binding SelectedUser}"
                          Text="{Binding SelectedOrder.User.UserLastName}"
                         ></ComboBox>
                   
                </StackPanel>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <StackPanel Orientation="Horizontal" Margin="5">
                    <Label Width="80">Откуда:</Label>
                    <TextBox Width="220"
                           Text="{Binding SelectedOrder.FromWhere}"></TextBox>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="5">
                    <Label Width="80">Куда:</Label>
                    <TextBox Width="220"
                         Text="{Binding SelectedOrder.Where}"></TextBox>
                </StackPanel>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <StackPanel Orientation="Horizontal" Margin="5">
                    <Label Width="80">Примечание:</Label>
                    <TextBox Width="400"
                         Text="{Binding SelectedOrder.Note}"></TextBox>
                </StackPanel>
               
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button Margin="5"
                        Width="100"
                        Command="{Binding RelativeSource={RelativeSource AncestorType=Grid,Mode=FindAncestor},Path=DataContext.SaveOrCancelCommand}"
                        CommandParameter="save order">Сохранить</Button>
                <Button Margin="5"
                        Width="100"
                        Command="{Binding RelativeSource={RelativeSource AncestorType=Grid,Mode=FindAncestor},Path=DataContext.SaveOrCancelCommand}"
                        CommandParameter="cancel order">Отмена</Button>
            </StackPanel>
        </StackPanel>





    </Grid>
</UserControl>
